<div class="container">
  <h2><i class="fas fa-sign-in-alt"></i> Log in form</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= f.label :email, style: "margin: 0" %></span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Enter email here' %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= f.label :password, style: "margin: 0" %></span>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'Enter password here' %>
      </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

    <% end %>

    <div class="actions">
      <%= f.button'<i class="fas fa-sign-in-alt"></i> Log in'.html_safe, class: "btn btn-primary", id: "log-in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>